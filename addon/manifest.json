{
  "manifest_version": 2,
  "name": "CAJ2PDF Converter",
  "version": "1.0.0",
  "description": "自动将 Zotero 中的 CAJ 文件转换为 PDF 格式",
  "author": "Fanhr",
  "homepage_url": "https://github.com/Fanhr/caj2pdfinZotero",
  
  "applications": {
    "zotero": {
      "id": "caj2pdf@fanhr.com",
      "strict_min_version": "6.0",
      "strict_max_version": "7.*",
      "update_url": "https://raw.githubusercontent.com/Fanhr/caj2pdfinZotero/main/update.json"
    }
  },

  "icons": {
    "48": "chrome/skin/default/caj2pdf/icon.png",
    "96": "chrome/skin/default/caj2pdf/icon@2x.png"
  }
} 